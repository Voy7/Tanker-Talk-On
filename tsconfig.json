{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "build",
    // "rootDir": "src",
    // enable absoloute import paths from src
    "baseUrl": "./src",
    "paths": {
      "#root/*": ["./*.ts"],
      "./package.json": ["../package.json"]
    },
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "package.json"]
}